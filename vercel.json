{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "404/index.html" }
  ],

  "redirects": [
    { "source": "/view-source", "destination": "https://github.com/puruvj/puruvjdev2" },
    { "source": "/twitter", "destination": "https://twitter.com/puruvjdev" },
    { "source": "/github", "destination": "https://github.com/puruvj" },
    { "source": "/devto", "destination": "https://dev.to/puruvj" }
  ]
}
